package atoms

type SearchInputProps struct {
	Name        string
	Placeholder string
	Value       string
	Size        string // "sm", "md", "lg"
}

// SearchInput - Flowbite search component
templ SearchInput(props SearchInputProps) {
	<form class="max-w-md">
		<label for={ props.Name } class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
		<div class="relative">
			<div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
				<span class="material-icons-outlined text-lg text-gray-500 dark:text-gray-400">search</span>
			</div>
			<input 
				type="search" 
				id={ props.Name }
				name={ props.Name }
				value={ props.Value }
				class={ searchInputClasses(props.Size) }
				placeholder={ getSearchPlaceholder(props.Placeholder) }
			/>
			<button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-primary-500 hover:bg-primary-600 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
				Rechercher
			</button>
		</div>
	</form>
}

// SearchInputSimple - Version simple sans bouton
templ SearchInputSimple(props SearchInputProps) {
	<div class="relative">
		<div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
			<span class="material-icons-outlined text-lg text-gray-500 dark:text-gray-400">search</span>
		</div>
		<input 
			type="search" 
			id={ props.Name }
			name={ props.Name }
			value={ props.Value }
			class="block w-full p-2.5 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
			placeholder={ getSearchPlaceholder(props.Placeholder) }
		/>
	</div>
}

func searchInputClasses(size string) string {
	base := "block w-full ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
	switch size {
	case "sm":
		return base + " p-2"
	case "lg":
		return base + " p-4"
	default:
		return base + " p-4"
	}
}

func getSearchPlaceholder(p string) string {
	if p == "" {
		return "Rechercher..."
	}
	return p
}
